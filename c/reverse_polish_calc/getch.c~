#include <stdio.h>

#define BUFFERSIZE 100

int bufp = 0;  // next free buffer position 
char buffer[BUFFERSIZE];  // buffer


//////////////////////////////////////////////////
int getch(void){

  return (bufp > 0) ? buffer[--bufp] : getchar();

}


//////////////////////////////////////////////////
void ungetch(int c){

  if(bufp>=BUFFERSIZE)
    printf("Buffer for [ungetch] of size [%d] caught too many characters", BUFFERSIZE);
  else
    buffer[bufp++] = c;

}


