#include <stdio.h>
#include <stdlib.h>  // contains mathematical functions for int-types

#define MAX 100

void printd(int n);
void itoa_rec(int, char[]);
void myreverse(char[]);
void swap(char[], int, int);


//////////////////////////////////////////////////
int main(void){

  int test = 1234;
  char arr[MAX];
  printd(test);
  printf("\n");

  itoa_rec(test, arr);
  printf("result [%s] \n", arr);
  printf("\n");

  return 0;

}


//////////////////////////////////////////////////
void itoa_rec(int n, char arr[]){
 
  static int counter;

  if(n/10){
    itoa_rec(n/10, arr);
  }
  else{
    counter = 0;
    if(n<0)
      arr[counter++] = '-';
    else
      arr[counter++] = '+';
  }

  arr[counter++] = abs(n) % 10 + '0';
  arr[counter] = '\0';

  /* printf("putting [%c] into pos [%d] \n", n%10+'0', counter); */
  /* arr[counter] = n % 10 + '0'; */

}


//////////////////////////////////////////////////
void printd(int n){

  if(n<0){
    putchar('-');
    n *= -1;
  }

  if(n/10)
    printd(n/10);

  putchar(n%10+'0');
}


